# Copy this file to dev.auto.tfvars and replace the placeholder values
# with real project/environment identifiers before provisioning.
project_name = "MindWell"
environment  = "dev"

# Azure configuration
azure_subscription_id = "00000000-0000-0000-0000-000000000000"
azure_tenant_id       = "00000000-0000-0000-0000-000000000000"
azure_location        = "eastasia"

# AWS region for cross-cloud storage replicas.
aws_region = "ap-northeast-1"

default_tags = {
  owner       = "devex"
  cost_center = "mindwell-therapy"
}

vnet_address_space  = ["10.30.0.0/16"]
subnet_aks_system   = "10.30.1.0/24"
subnet_aks_workload = "10.30.2.0/24"
subnet_postgres     = "10.30.3.0/24"

aks_service_cidr   = "10.31.0.0/16"
aks_dns_service_ip = "10.31.0.10"

api_server_allowed_ips = [
  "203.0.113.0/24",
]

log_retention_days = 30

oncall_email        = "oncall@example.com"
oncall_country_code = "86"
oncall_phone        = "13800138000"

aks_cpu_alert_threshold = 80
aks_version             = "1.29.4"

aks_admin_group_object_ids = []

aks_workload_vm_size    = "Standard_D8s_v5"
aks_workload_node_count = 2
aks_workload_min_count  = 1
aks_workload_max_count  = 5

postgres_sku_name                     = "GP_Standard_D4s_v3"
postgres_storage_mb                   = 131072
postgres_backup_retention_days        = 14
postgres_geo_redundant_backup_enabled = true
postgres_ha_mode                      = "ZoneRedundant"
postgres_maintenance_day              = 6
postgres_maintenance_hour             = 22
postgres_version                      = "14"
postgres_admin_username               = "mindwelladmin"

key_vault_admin_object_id = "00000000-0000-0000-0000-000000000000"
key_vault_allowed_ips = [
  "203.0.113.0/24",
]

placeholder_openai_api_key          = "sk-test-change-me"
kubelet_identity_object_id_override = ""
